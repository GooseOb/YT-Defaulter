{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noMisleadingCharacterClass": "off",
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noFallthroughSwitchClause": "off"
			},
			"style": {
				"useTemplate": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useSingleVarDeclarator": "off",
				"noCommaOperator": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"indentStyle": "tab"
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"files": {
		"ignore": ["src/dict/wordlist.ts", "json/*", "dist/*", "docs/*"]
	}
}
